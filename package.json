{
	"name": "reval-vscode",
	"displayName": "reval-vscode",
	"description": "VS Code plugin for qualia:reval",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:reval-vscode.reload",
		"onCommand:reval-vscode.clear",
		"onCommand:reval-vscode.save"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "reval-vscode.reload",
				"title": "Applies Reval Patch"
			},
			{
				"command": "reval-vscode.clear",
				"title": "Clears Reval Patches"
			},
			{
				"command": "reval-vscode.save",
				"title": "Saves Reval Patches"
			}
		],
		"keybindings": [
			{
				"command": "reval-vscode.reload",
				"key": "alt+r",
				"when": "editorTextFocus"
			},
			{
				"command": "reval-vscode.clear",
				"key": "alt-c",
				"when": "editorTextFocus"
			}
		],
		"configuration":[
			{
				"title": "Reval VSCode",
				"properties": {
					"revalVSCode.hostname": {
						"type": "string",
						"description": "Server hostname",
						"default": "localhost"
					},
					"revalVSCode.port": {
						"type": "integer",
						"description": "Server port ( <= 0 to ignore value )",
						"default": 3000
					},
					"revalVSCode.endpoint": {
						"type": "string",
						"description": "Server endpoint",
						"default": ""
					},
					"revalVSCode.useHttps": {
						"type": "boolean",
						"description": "If True, Use HTTPS",
						"default": false
					}
				}
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
